[menu]
  [[menu.header]]
    name = "posts"
    weight = 0
    url = "/posts"
  [[menu.header]]
    name = "about"
    weight = 1
    url = "/about"

[[params.social]]
  name = "mastodon"
    url = "https://mstdn.social/@daim"
    rel = "me noopener"
    key = 0
[[params.social]]
  name = "github"
    url = "https://github.com/daimexmachina"
    key = 1
[[params.social]]
  name = "keybase"
    url = "https://keybase.io/daim"
    key = 2
[[params.social]]
  name = "rss"
    url = "https://daim.co.uk/index.xml"
    key = 3

resourceDir = "../resources"

DefaultContentLanguage = "en"
SectionPagesMenu = "main"
