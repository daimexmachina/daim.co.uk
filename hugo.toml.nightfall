[params]
  user = ""
  hostname = "daim.co.uk"
  text_color = ""
  author = "daim (ex machina)"
  favicon = ""
  site_logo = ""
  description = "daim (ex machina)"
  # choose a background color from any on this page: https://tachyons.io/docs/themes/skins/ and preface it with "bg-"
#ananke?  background_color_class = "bg-black"
#ananke?  recent_posts_number = 3
#ananke?  post_content_classes = "avenir bg-near-white"
